{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C: Build with GCC",                                   
            "command": "C:\\msys64\\mingw64\\bin\\gcc.exe",
            "args": [
                "-std=c11",
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "GCC Compiler for C"
        },
        {
            "type": "cppbuild",
            "label": "C++: Build with G++",
            "command": "C:\\msys64\\mingw64\\bin\\g++.exe",                  
            "args": [
                "-std=c++20",
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "G++ Compiler for C++"
        }
    ]
}




